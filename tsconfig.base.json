{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "paths": {
      "@caster/authn/*": ["libs/authn/src/*"],
      "@caster/events/*": ["libs/events/src/*"],
      "@caster/graphql/*": ["libs/graphql/src/*"],
      "@caster/roles/*": ["libs/roles/src/*"],
      "@caster/roles/test/*": ["libs/roles/test/*"],
      "@caster/shows/*": ["libs/shows/src/*"],
      "@caster/shows/test/*": ["libs/shows/test/*"],
      "@caster/users/*": ["libs/users/src/*"],
      "@caster/users/test/*": ["libs/users/test/*"],
      "@caster/utils/*": ["libs/utils/src/*"],
      "@caster/utils/test/*": ["libs/utils/test/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
