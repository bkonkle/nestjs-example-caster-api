{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "paths": {
      "@caster/graphql": ["libs/graphql/src/index.ts"],
      "@caster/graphql/*": ["libs/graphql/src/*"],
      "@caster/users": ["libs/users/src/index.ts"],
      "@caster/users/*": ["libs/users/src/*"],
      "@caster/users/test": ["libs/users/test/index.ts"],
      "@caster/utils": ["libs/utils/src/index.ts"],
      "@caster/utils/*": ["libs/utils/src/*"],
      "@caster/utils/test": ["libs/utils/test/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
